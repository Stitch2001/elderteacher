<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gdbjzx.elderteacher">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="玩转智能机"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SecondMenuActivity"
            android:label="玩转智能机"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ChooseMusicActivity"
            android:label="设置来电铃声"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SubmitSuggestionsActivity"
            android:label="意见反馈"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PressPracticeActivity"
            android:label="按键能力练习"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".StepTeacherActivity"
            android:label="@string/title_activity_step_teacher"
            android:theme="@style/AppTheme" />
        <activity android:name=".SetStudyNumberActivity" />
        <activity android:name=".FinishStudyActivity"></activity>
    </application>

</manifest>